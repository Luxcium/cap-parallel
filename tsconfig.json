{
  // "extends": "tsconfig.main.json",
  "references": [
    {
      "path": "src"
    },
    {
      "path": "test"
    }
  ],
  // Exclude references and emitted output
  "exclude": ["src", "test", "dist", "archives", "out"],
  "compilerOptions": {
    "target": "es6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "noErrorTruncation": false,
    "composite": true,
    "rootDir": ".",
    // We can't pass "noEmit" in incremental mode, but this is close enough.
    "outDir": "./.tmp/build",
    "emitDeclarationOnly": true,
    "allowSyntheticDefaultImports": true,
    "generateCpuProfile": "./.tmp/performance/cpu-info.cpuprofile"
  }
}
