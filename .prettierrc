{
  "arrowParens": "avoid",
  "bracketSpacing": true,
  "endOfLine": "lf",
  "htmlWhitespaceSensitivity": "css",
  "insertPragma": false,
  "jsxSingleQuote": false,
  "overrides": [
    {
      "files": [
        "scripts/*.ts",
        "src/core/classes/utilities/files/fs.ts",
        "src/private/sharp-phash/listFiles.ts"
      ],
      "options": {
        "printWidth": 120,
        "proseWrap": "never"
      }
    }
  ],
  "printWidth": 80,
  "proseWrap": "preserve",
  "semi": true,
  "singleQuote": true,
  "tabWidth": 2,
  "trailingComma": "es5",
  "useTabs": false
}
